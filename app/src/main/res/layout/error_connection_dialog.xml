<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_main_bc"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_unsuccess"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/internet_connection" />

    </LinearLayout>
    <TextView
        android:id="@+id/TitleErrorConnectionDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خــــطا در ارتـــباط !"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:id="@+id/TextErrorConnectionDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="ارتباط با سرور برقرار نمی باشد. لطفا اتصال شبکه خود را بررسی نموده و یا فیلتر شکن خود را خاموش نمایید."
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15sp" />

</LinearLayout>